{
  "name": "@advclb/scripts",
  "version": "1.0.0",
  "description": "Adventure Club front-end build scripts",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run doc:start",
    "test": "jest",
    "build": "webpack --mode=production",
    "deploy": "npm run doc:deploy",
    "lint": "eslint src/**/*.js && stylelint src/**/*.css",
    "format": "prettier --write src/**",
    "doc:build": "webpack --mode=production --config=doc/webpack.config.js",
    "doc:start": "webpack-dev-server --mode=development --config=doc/webpack.config.js",
    "doc:deploy": "gh-pages -d doc/dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/advclb/foobar.git"
  },
  "author": "Guo Yunhe",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/advclb/foobar/issues"
  },
  "homepage": "https://github.com/advclb/foobar#readme",
  "dependencies": {
    "clean-webpack-plugin": "latest",
    "commander": "latest",
    "css-loader": "latest",
    "html-webpack-plugin": "latest",
    "postcss-loader": "latest",
    "sass": "latest",
    "sass-loader": "latest",
    "style-loader": "latest",
    "ts-loader": "latest",
    "webpack": "latest",
    "webpack-dev-server": "latest"
  },
  "devDependencies": {
    "eslint": "latest",
    "eslint-config-advclb": "latest",
    "prettier": "latest",
    "typescript": "latest"
  }
}
